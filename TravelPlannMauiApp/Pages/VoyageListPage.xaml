<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:TravelPlannMauiApp.ViewModels"
             xmlns:converters="clr-namespace:Common.Converters;assembly=Common"
             x:Class="TravelPlannMauiApp.Pages.VoyageListPage"
             Title="Mes Voyages"
             BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#121212}">

    <ContentPage.Resources>
        <converters:BoolToCompleteTextConverter x:Key="BoolToCompleteText"/>
        <converters:BoolToArchiveTextConverter x:Key="BoolToArchiveText"/>
        <converters:StatusToColorConverter x:Key="StatusToColor"/>
        <converters:EtatToColorConverter x:Key="EtatToColor"/>
        <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
    </ContentPage.Resources>

    <Grid RowDefinitions="*,Auto">
        <!-- Liste des voyages avec RefreshView -->
        <RefreshView Grid.Row="0"
                     IsRefreshing="{Binding IsLoading}"
                     Command="{Binding LoadVoyagesCommand}"
                     BackgroundColor="Transparent">
            <CollectionView ItemsSource="{Binding Voyages}"
                           EmptyView="Aucun voyage planifiÃ©"
                           SelectionMode="None"
                           ItemSizingStrategy="MeasureFirstItem">

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <SwipeView>
                            <!-- Swipe vers la droite - Valider/Invalider -->
                            <SwipeView.RightItems>
                                <SwipeItems Mode="Reveal">
                                    <SwipeItem Text="{Binding EstComplete, Converter={StaticResource BoolToCompleteText}}"
                                               BackgroundColor="{Binding EstComplete, Converter={StaticResource StatusToColor}}"
                                               Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:VoyageViewModel}}, Path=ToggleCompleteVoyageCommand}"
                                               CommandParameter="{Binding}"/>
                                </SwipeItems>
                            </SwipeView.RightItems>

                            <!-- Swipe vers la gauche - Archiver/DÃ©sarchiver -->
                            <SwipeView.LeftItems>
                                <SwipeItems Mode="Reveal">
                                    <SwipeItem Text="{Binding EstArchive, Converter={StaticResource BoolToArchiveText}}"
                                               BackgroundColor="{Binding EstArchive, Converter={StaticResource StatusToColor}, ConverterParameter=archive}"
                                               Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:VoyageViewModel}}, Path=ToggleArchiveVoyageCommand}"
                                               CommandParameter="{Binding}"/>
                                </SwipeItems>
                            </SwipeView.LeftItems>

                            <!-- Contenu principal -->
                            <Frame Padding="0" Margin="10,5" CornerRadius="12" HasShadow="True">
                                <Grid ColumnDefinitions="8,*,Auto" RowDefinitions="Auto,Auto,Auto,Auto"
                                      Padding="0"
                                      BackgroundColor="{AppThemeBinding Light=White, Dark=#1E1E1E}">

                                    <!-- Indicateur d'Ã©tat colorÃ© (cÃ´tÃ© gauche) -->
                                    <BoxView Grid.RowSpan="4" 
                                             WidthRequest="8"
                                             CornerRadius="6,0,0,6"
                                             Color="#4CAF50"
                                             IsVisible="{Binding EstComplete}"/>
                                    
                                    <BoxView Grid.RowSpan="4" 
                                             WidthRequest="8"
                                             CornerRadius="6,0,0,6"
                                             Color="#FF9800"
                                             IsVisible="{Binding EstArchive}"/>

                                    <!-- Contenu principal avec padding -->
                                    <Grid Grid.Column="1" Grid.RowSpan="4" 
                                          Padding="15"
                                          RowDefinitions="Auto,Auto,Auto,Auto">

                                        <!-- En-tÃªte avec nom et badges d'Ã©tat -->
                                        <Grid Grid.Row="0" ColumnDefinitions="*,Auto">
                                            <Label Text="{Binding NomVoyage}"
                                                   FontSize="18"
                                                   FontAttributes="Bold"
                                                   TextColor="{AppThemeBinding Light=#333333, Dark=White}"
                                                   VerticalOptions="Center"/>

                                            <!-- Badges d'Ã©tat -->
                                            <StackLayout Grid.Column="1" Orientation="Horizontal" Spacing="5">
                                                <!-- Badge ValidÃ© -->
                                                <Frame IsVisible="{Binding EstComplete}"
                                                       Padding="8,4"
                                                       CornerRadius="12"
                                                       BackgroundColor="#4CAF50"
                                                       HasShadow="False">
                                                    <Label Text="âœ“ ValidÃ©"
                                                           FontSize="10"
                                                           FontAttributes="Bold"
                                                           TextColor="White"/>
                                                </Frame>

                                                <!-- Badge ArchivÃ© -->
                                                <Frame IsVisible="{Binding EstArchive}"
                                                       Padding="8,4"
                                                       CornerRadius="12"
                                                       BackgroundColor="#FF9800"
                                                       HasShadow="False">
                                                    <Label Text="ðŸ“ ArchivÃ©"
                                                           FontSize="10"
                                                           FontAttributes="Bold"
                                                           TextColor="White"/>
                                                </Frame>
                                            </StackLayout>
                                        </Grid>

                                        <!-- Description -->
                                        <Label Grid.Row="1"
                                               Text="{Binding Description}"
                                               FontSize="14"
                                               TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}"
                                               MaxLines="2"
                                               LineBreakMode="TailTruncation"
                                               Margin="0,5,0,0"/>

                                        <!-- Dates -->
                                        <StackLayout Grid.Row="2" Orientation="Horizontal" Spacing="15" Margin="0,8,0,0">
                                            <Label Text="{Binding DateDebut, StringFormat='{0:dd MMM yyyy}'}"
                                                   FontSize="12"
                                                   TextColor="{AppThemeBinding Light=#6200EE, Dark=#BB86FC}"/>
                                            <Label Text="â†’"
                                                   FontSize="12"
                                                   TextColor="{AppThemeBinding Light=#888888, Dark=#AAAAAA}"/>
                                            <Label Text="{Binding DateFin, StringFormat='{0:dd MMM yyyy}'}"
                                                   FontSize="12"
                                                   TextColor="{AppThemeBinding Light=#6200EE, Dark=#BB86FC}"/>
                                        </StackLayout>

                                        <!-- Bouton dÃ©tails -->
                                        <Button Grid.Row="3"
                                                Text="Voir dÃ©tails"
                                                BackgroundColor="Transparent"
                                                TextColor="{AppThemeBinding Light=#6200EE, Dark=#BB86FC}"
                                                FontSize="12"
                                                FontAttributes="Bold"
                                                HorizontalOptions="End"
                                                Padding="0"
                                                Margin="0,8,0,0"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:VoyageViewModel}}, Path=ViewVoyageDetailsCommand}"
                                                CommandParameter="{Binding}">
                                            <VisualStateManager.VisualStateGroups>
                                                <VisualStateGroup x:Name="CommonStates">
                                                    <VisualState x:Name="Normal"/>
                                                    <VisualState x:Name="Pressed">
                                                        <VisualState.Setters>
                                                            <Setter Property="Opacity" Value="0.6"/>
                                                        </VisualState.Setters>
                                                    </VisualState>
                                                </VisualStateGroup>
                                            </VisualStateManager.VisualStateGroups>
                                        </Button>
                                    </Grid>
                                </Grid>
                            </Frame>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>

        <!-- Bouton flottant Ajouter -->
        <Button Grid.Row="1"
                Text="+"
                Command="{Binding AddVoyageCommand}"
                FontSize="28"
                FontAttributes="Bold"
                BackgroundColor="{AppThemeBinding Light=#6200EE, Dark=#BB86FC}"
                TextColor="White"
                CornerRadius="30"
                WidthRequest="60"
                HeightRequest="60"
                HorizontalOptions="End"
                VerticalOptions="End"
                Margin="20">
            <Button.Shadow>
                <Shadow Brush="#00000000"
                        Offset="0,5"
                        Radius="10"
                        Opacity="0"/>
            </Button.Shadow>
        </Button>
    </Grid>
</ContentPage>