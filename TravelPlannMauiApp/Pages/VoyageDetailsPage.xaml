        <converters:DecimalToEuroConverter x:Key="DecimalToEuro"/>
        <converters:StringToVisibilityConverter x:Key="StringToVisibility"/>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="15" Spacing="10">
            
            <!-- Carte (rÃ©duite) -->
