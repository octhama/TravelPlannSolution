                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Section HÃ©bergements (visible uniquement en mode Ã©dition) -->
                    <Frame Padding="10"
