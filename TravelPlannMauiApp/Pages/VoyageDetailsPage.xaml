                                    <!-- Description -->
                                    <Label Grid.Row="1"
                                           Text="{Binding Description}"
                                           FontSize="13" 
                                           TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}"
                                           IsVisible="{Binding Description, Converter={StaticResource StringToVisibility}}"
