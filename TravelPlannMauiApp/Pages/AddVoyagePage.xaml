<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:TravelPlannMauiApp.ViewModels"
             xmlns:sys="clr-namespace:System;assembly=System.Runtime"
             xmlns:converters="clr-namespace:Common.Converters;assembly=Common"
             x:Class="TravelPlannMauiApp.Pages.AddVoyagePage"
             Title="Nouveau Voyage"
             BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#121212}">

    <ContentPage.Resources>
        <converters:InverseBoolConverter x:Key="InverseBool"/>
        <converters:DecimalToEuroConverter x:Key="DecimalToEuro"/>
        <converters:StringToVisibilityConverter x:Key="StringToVisibility"/>
    </ContentPage.Resources>

    <ScrollView>
        <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto"
              Padding="20"
              RowSpacing="15"
              ColumnSpacing="10">

            <!-- Header -->
            <Label Grid.Row="0" 
                   Text="Planifiez votre voyage"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="{AppThemeBinding Light=#333333, Dark=White}"
                   Margin="0,0,0,10"/>

            <!-- Nom du voyage -->
            <Frame Grid.Row="1"
                   Padding="15"
                   CornerRadius="10"
                   BackgroundColor="{AppThemeBinding Light=White, Dark=#1E1E1E}"
                   HasShadow="True">
                <VerticalStackLayout Spacing="5">
                    <Label Text="Nom du voyage"
                           FontSize="14"
                           TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}"/>
                    <Entry Text="{Binding NomVoyage}"
                           Placeholder="Mon voyage en Europe"
                           PlaceholderColor="{AppThemeBinding Light=#AAAAAA, Dark=#666666}"
                           ClearButtonVisibility="WhileEditing"
                           FontSize="16"
                           TextColor="{AppThemeBinding Light=#333333, Dark=White}"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Description -->
            <Frame Grid.Row="2"
                   Padding="15"
                   CornerRadius="10"
                   BackgroundColor="{AppThemeBinding Light=White, Dark=#1E1E1E}"
                   HasShadow="True">
                <VerticalStackLayout Spacing="5">
                    <Label Text="Description"
                           FontSize="14"
                           TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}"/>
                    <Editor Text="{Binding Description}"
                            Placeholder="Décrivez votre voyage..."
                            PlaceholderColor="{AppThemeBinding Light=#AAAAAA, Dark=#666666}"
                            AutoSize="TextChanges"
                            FontSize="16"
                            TextColor="{AppThemeBinding Light=#333333, Dark=White}"
                            HeightRequest="100"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Dates -->
            <Frame Grid.Row="3"
                   Padding="15"
                   CornerRadius="10"
                   BackgroundColor="{AppThemeBinding Light=White, Dark=#1E1E1E}"
                   HasShadow="True">
                <Grid ColumnDefinitions="*,*" ColumnSpacing="15">
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Date de début"
                               FontSize="14"
                               TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}"/>
                        <DatePicker Date="{Binding DateDebut}"
                                    FontSize="16"
                                    TextColor="{AppThemeBinding Light=#333333, Dark=White}"
                                    MinimumDate="{x:Static sys:DateTime.Now}"/>
                    </VerticalStackLayout>

                    <VerticalStackLayout Grid.Column="1" Spacing="5">
                        <Label Text="Date de fin"
                               FontSize="14"
                               TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}"/>
                        <DatePicker Date="{Binding DateFin}"
                                    FontSize="16"
                                    TextColor="{AppThemeBinding Light=#333333, Dark=White}"
                                    MinimumDate="{Binding DateDebut}"/>
                    </VerticalStackLayout>
                </Grid>
            </Frame>

            <!-- Section Activités AMÉLIORÉE -->
            <Frame Grid.Row="4"
                   Padding="15"
                   CornerRadius="10"
                   BackgroundColor="{AppThemeBinding Light=White, Dark=#1E1E1E}"
                   HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <Grid ColumnDefinitions="*,Auto">
                        <Label Text="Activités (optionnel)"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#333333, Dark=White}"/>
                        <Label Grid.Column="1" 
                               Text="📍"
                               FontSize="16"
                               TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}"/>
                    </Grid>

                    <!-- Formulaire d'ajout d'activité AMÉLIORÉ -->
                    <Frame IsVisible="{Binding ShowActiviteForm}"
                           Padding="10"
                           BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#252525}"
                           CornerRadius="8">
                        <VerticalStackLayout Spacing="8">
                            <Entry Text="{Binding NouvelleActiviteNom}" 
                                   Placeholder="Nom de l'activité"
                                   TextColor="{AppThemeBinding Light=#333333, Dark=White}"/>
                                   
                            <Editor Text="{Binding NouvelleActiviteDescription}"
                                    Placeholder="Description de l'activité"
                                    HeightRequest="80"
                                    TextColor="{AppThemeBinding Light=#333333, Dark=White}"/>

                            <!-- NOUVEAU : Champ Localisation -->
                            <Entry Text="{Binding NouvelleActiviteLocalisation}"
                                   Placeholder="📍 Localisation (ex: Tour Eiffel, Paris)"
                                   TextColor="{AppThemeBinding Light=#333333, Dark=White}"/>
                                    
                            <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                                <Button Text="Annuler" 
                                        Command="{Binding AnnulerAjoutActiviteCommand}"
                                        BackgroundColor="#CCCCCC"
                                        TextColor="Black"/>
                                        
                                <Button Grid.Column="1" 
                                        Text="Ajouter"
                                        Command="{Binding AjouterNouvelleActiviteCommand}"
                                        BackgroundColor="{AppThemeBinding Light=#6200EE, Dark=#BB86FC}"
                                        TextColor="White"/>
                            </Grid>
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Bouton pour afficher le formulaire -->
                    <Button Text="+ Ajouter une activité"
                            Command="{Binding AjouterActiviteCommand}"
                            IsVisible="{Binding ShowActiviteForm, Converter={StaticResource InverseBool}}"
                            BackgroundColor="Transparent"
                            TextColor="{AppThemeBinding Light=#6200EE, Dark=#BB86FC}"/>

                    <!-- Liste des activités AMÉLIORÉE avec localisation -->
                    <CollectionView ItemsSource="{Binding NouvellesActivites}"
                                   HeightRequest="180">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="10" ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto">
                                    <!-- Nom de l'activité -->
                                    <Label Text="{Binding Nom}"
                                           FontAttributes="Bold"
                                           FontSize="14"
                                           VerticalOptions="Start"/>
                                    
                                    <!-- Description -->
                                    <Label Grid.Row="1"
                                           Text="{Binding Description}"
                                           FontAttributes="Italic"
                                           FontSize="12"
                                           TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}"
                                           VerticalOptions="Start"/>
                                    
                                    <!-- NOUVEAU : Localisation -->
                                    <Label Grid.Row="2"
                                           Text="{Binding Localisation, StringFormat='📍 {0}'}"
                                           FontSize="11"
                                           TextColor="{AppThemeBinding Light=#6200EE, Dark=#BB86FC}"
                                           VerticalOptions="Start"
                                           IsVisible="{Binding Localisation, Converter={StaticResource StringToVisibility}}"/>
                                    
                                    <!-- Bouton supprimer -->
                                    <Button Grid.Column="1" 
                                            Grid.RowSpan="3"
                                            Text="×"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:AddVoyageViewModel}}, Path=SupprimerActiviteCommand}"
                                            CommandParameter="{Binding}"
                                            BackgroundColor="Transparent"
                                            TextColor="Red"
                                            FontSize="16"
                                            FontAttributes="Bold"
                                            VerticalOptions="Center"
                                            HorizontalOptions="End"/>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>

            <!-- Section Hébergements AMÉLIORÉE -->
            <Frame Grid.Row="5"
                   Padding="15"
                   CornerRadius="10"
                   BackgroundColor="{AppThemeBinding Light=White, Dark=#1E1E1E}"
                   HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <Grid ColumnDefinitions="*,Auto">
                        <Label Text="Hébergements (optionnel)"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#333333, Dark=White}"/>
                        <Label Grid.Column="1" 
                               Text="🏠"
                               FontSize="16"
                               TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}"/>
                    </Grid>

                    <!-- Formulaire d'ajout d'hébergement AMÉLIORÉ -->
                    <Frame IsVisible="{Binding ShowHebergementForm}"
                           Padding="10"
                           BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#252525}"
                           CornerRadius="8">
                        <VerticalStackLayout Spacing="8">
                            <Entry Text="{Binding NouvelHebergementNom}" 
                                   Placeholder="Nom de l'hébergement"
                                   TextColor="{AppThemeBinding Light=#333333, Dark=White}"/>
                                   
                            <Entry Text="{Binding NouvelHebergementType}"
                                   Placeholder="Type (Hôtel, Airbnb, Camping...)"
                                   TextColor="{AppThemeBinding Light=#333333, Dark=White}"/>

                            <!-- NOUVEAU : Champ Adresse -->
                            <Entry Text="{Binding NouvelHebergementAdresse}"
                                   Placeholder="🏠 Adresse complète"
                                   TextColor="{AppThemeBinding Light=#333333, Dark=White}"/>
                                   
                            <Entry Text="{Binding NouvelHebergementCout}"
                                   Placeholder="Coût par nuit (€)"
                                   Keyboard="Numeric"
                                   TextColor="{AppThemeBinding Light=#333333, Dark=White}"/>
                                    
                            <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                                <Button Text="Annuler" 
                                        Command="{Binding AnnulerAjoutHebergementCommand}"
                                        BackgroundColor="#CCCCCC"
                                        TextColor="Black"/>
                                        
                                <Button Grid.Column="1" 
                                        Text="Ajouter"
                                        Command="{Binding AjouterNouvelHebergementCommand}"
                                        BackgroundColor="{AppThemeBinding Light=#6200EE, Dark=#BB86FC}"
                                        TextColor="White"/>
                            </Grid>
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Bouton pour afficher le formulaire -->
                    <Button Text="+ Ajouter un hébergement"
                            Command="{Binding AjouterHebergementCommand}"
                            IsVisible="{Binding ShowHebergementForm, Converter={StaticResource InverseBool}}"
                            BackgroundColor="Transparent"
                            TextColor="{AppThemeBinding Light=#6200EE, Dark=#BB86FC}"/>

                    <!-- Liste des hébergements AMÉLIORÉE avec adresse -->
                    <CollectionView ItemsSource="{Binding NouveauxHebergements}"
                                   HeightRequest="180"
                                   Margin="0,10,0,0">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="10" ColumnDefinitions="2*,*,*,Auto" RowDefinitions="Auto,Auto">
                                    <!-- Nom et type -->
                                    <Label Text="{Binding Nom}"
                                           FontAttributes="Bold"
                                           FontSize="14"
                                           VerticalOptions="Start"/>
                                    
                                    <Label Grid.Column="1" 
                                           Text="{Binding TypeHebergement}"
                                           FontAttributes="Italic"
                                           FontSize="12"
                                           TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}"
                                           VerticalOptions="Start"/>
                                    
                                    <Label Grid.Column="2" 
                                           Text="{Binding Cout, Converter={StaticResource DecimalToEuro}}"
                                           TextColor="Green"
                                           FontAttributes="Bold"
                                           FontSize="14"
                                           VerticalOptions="Start"/>

                                    <!-- NOUVEAU : Adresse -->
                                    <Label Grid.Row="1"
                                           Grid.ColumnSpan="3"
                                           Text="{Binding Adresse, StringFormat='🏠 {0}'}"
                                           FontSize="11"
                                           TextColor="{AppThemeBinding Light=#6200EE, Dark=#BB86FC}"
                                           VerticalOptions="Start"
                                           IsVisible="{Binding Adresse, Converter={StaticResource StringToVisibility}}"/>
                                    
                                    <!-- Bouton supprimer -->
                                    <Button Grid.Column="3" 
                                            Grid.RowSpan="2"
                                            Text="×"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:AddVoyageViewModel}}, Path=SupprimerHebergementCommand}"
                                            CommandParameter="{Binding}"
                                            BackgroundColor="Transparent"
                                            TextColor="Red"
                                            FontSize="16"
                                            FontAttributes="Bold"
                                            VerticalOptions="Center"
                                            HorizontalOptions="End"/>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>

            <!-- Boutons principaux -->
            <StackLayout Grid.Row="8" HorizontalOptions="Center" Margin="0,20">
                <!-- Bouton Enregistrer -->
                <Button Text="Enregistrer le voyage"
                        Command="{Binding AddVoyageCommand}"
                        BackgroundColor="{AppThemeBinding Light=#6200EE, Dark=#BB86FC}"
                        TextColor="White"
                        FontSize="16"
                        FontAttributes="Bold"
                        CornerRadius="10"
                        HeightRequest="50"
                        WidthRequest="200">
                    <Button.Shadow>
                        <Shadow Brush="{AppThemeBinding Light=#6200EE, Dark=#BB86FC}"
                                Offset="0,5"
                                Radius="10"
                                Opacity="0.3"/>
                    </Button.Shadow>
                    <VisualStateManager.VisualStateGroups>
                        <VisualStateGroup x:Name="CommonStates">
                            <VisualState x:Name="Normal"/>
                            <VisualState x:Name="Pressed">
                                <VisualState.Setters>
                                    <Setter Property="Opacity" Value="0.8"/>
                                    <Setter Property="Scale" Value="0.98"/>
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateManager.VisualStateGroups>
                </Button>
                
                <Button Text="Annuler"
                        Command="{Binding GoBackCommand}"
                        BackgroundColor="Transparent"
                        TextColor="{AppThemeBinding Light=#6200EE, Dark=#BB86FC}"
                        FontSize="14"
                        WidthRequest="200"
                        Margin="0,10"/>
            </StackLayout>
        </Grid>
    </ScrollView>
</ContentPage>