<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TravelPlannMauiApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TravelPlannMauiApp"
    xmlns:pages="clr-namespace:TravelPlannMauiApp.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="TravelPlannMauiApp">

    <!-- Page de connexion comme page d'accueil -->
    <ShellContent
        Title="Connexion"
        ContentTemplate="{DataTemplate pages:LoginPage}"
        Route="LoginPage" />

    <!-- Page principale (accessible aprÃ¨s connexion) -->
    <ShellContent
        Title="TravelPlann"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

</Shell>